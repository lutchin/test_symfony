{% extends '::base.html.twig' %}
{% block title %}Все сообщения!{% endblock%}
{% block body %}
    <p>Все сообщения!</p></br>
    {% for message in list %}


        <p> Файл №{{ message.id }} : <a href="{{ asset('uploads/files/' ~ message.file) }}">Посмотреть файл (PDF)</a> Заголовок:{{ message.title }} Сообщение:{{ message.message }}</p>



    {% endfor %}
    <a href="{{ path('messenger_message_sendmessages') }}">Отправить сообщение!</a></br>
    <a href="{{ path('messenger_message_homepage') }}">На главную</a>

{% endblock %}